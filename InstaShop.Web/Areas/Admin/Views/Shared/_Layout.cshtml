<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/bootstrap-rtl.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("فروشگاه اینستاگرام", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("مدیریت گروه ها", "Index", "PageGroups", new { area = "Admin" }, new { @class = "navbar-text" })
                @Html.ActionLink("مدیریت صفحات", "Index", "Pages", new { area = "Admin" }, new { @class = "navbar-text" })
                @Html.ActionLink("مدیریت ادمین ها", "Index", "AdminLogins", new { area = "Admin" }, new { @class = "navbar-text" })
                @Html.ActionLink(
                    "مدیریت نظرات", 
                    "Index", 
                    "PageComments", 
                    new { area = "Admin" }, 
                    new { @class = "navbar-text" }
                )
                @Html.Action("GetNewCommentsCount", "AdminNotification")
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p></p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @RenderSection("Scripts",required:false)
</body>
</html>