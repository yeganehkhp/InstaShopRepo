@model IEnumerable<InstaShop.DataLayer.Models.PageGroup>

@{
    ViewBag.Title = "مدیریت گروه ها";
}

<h2>مدیریت گروه ها</h2>

<p>
    @Html.ActionLink("افزودن گروه جدید", "Create", "PageGroups", new { area = "Admin" }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr class="bg-primary text-white">
        <th>
            @Html.DisplayNameFor(model => model.GroupTitle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GroupTitle)
        </td>
        <td>
            @*@Html.ActionLink("ویرایش", "Edit", new { id=item.GroupID }) |
            @Html.ActionLink("جزئیات", "Details", new { id=item.GroupID }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.GroupID })*@
            
            <a class="btn btn-warning btn-sm" href="/Admin/PageGroups/Edit/@item.GroupID">
                <i class="glyphicon glyphicon-edit"></i>
            </a>
            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete",new {id=item.GroupID})">
                <i class="glyphicon glyphicon-trash"></i>
            </a>
            <a class="btn btn-info btn-sm" href="/Admin/PageGroups/Details/@item.GroupID">
                <i class="glyphicon glyphicon-open"></i>
            </a>
        </td>
    </tr>
